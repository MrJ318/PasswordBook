<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LockStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorLockBackground</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <!--弹出软键盘-->
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>

</resources>
